<div class='container' style='margin-top:67px'>
    <ul class="nav nav-tabs" role="tablist" style=''>
        <li role="presentation" class="{{#when currentTab 'eq' 'add' }}active{{/when}}">
            <a href="#syncconnect" aria-controls="profile" role="tab" data-toggle="tab" data-tab='add'>Add a new FTP Sync</a>
        </li>
        <li role="presentation" class="{{#when currentTab 'eq' 'list' }}active{{/when}}">
            <a href="#synclist" aria-controls="profile" role="tab" data-toggle="tab" data-tab='list'>FTP Sync List</a>
        </li>
    </ul>
    <br>
    <div class="tab-content">
        <div class="col-sm-8 tab-pane fade in {{#when currentTab 'eq' 'add' }}active{{/when}}" id='syncconnect'>
            <form class="">
                <div class="form-group">
                    <label for="email">Host:</label>
                    <input type="text" class="form-control" name='host'>
                </div>
                <div class="form-group">
                    <label for="email">User:</label>
                    <input type="text" class="form-control" name='user'>
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" name='pass'>
                </div>
                <div class="form-group">
                    <label for="email">Port:</label>
                    <input type="text" class="form-control" name='port'>
                </div>
                <label for="email">Local Directory</label>
                <div class="input-group">
                    <input type="text" class="form-control " placeholder="Local Directory " name='local' disabled>
                    <span class="input-group-addon localdirselect" style='cursor:pointer;color:#54b2ef;'><i class="fa fa-folder-open"></i></span>
                </div>
                <label for="email">Remote Directory</label>
                <div class="input-group">
                    <input type="text" class="form-control " placeholder="Remote Directory " name='remote' />
                    <span class="input-group-addon remotedirselect" style='cursor:pointer;color:#54b2ef'><i class="fa fa-folder-open"></i></span>
                </div>
                <div class="form-group">
                    <label for="email">Ignore File & Directory</label>
                    <input type="text" class="form-control" name='ignore' placeholder="node_modules,bower_components">
                </div>
                <input type='button' class="btn btn-info syncftp" value='Sync Folder' />
            </form>
        </div>
        <div class="tab-pane fade {{#when currentTab 'eq' 'list' }}active{{/when}}" id='synclist'>
            <table class="table striped " {{#if isMobile}}style='width:800px;' {{/if}} style="">
                <thead>
                    <th>Host</th>
                    <th>User</th>
                    <th>Local</th>
                    <th>Remote</th>
                    <th>Ignore</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each synclist}}
                    <tr>
                        <td>{{host}}</td>
                        <td>{{user}}</td>
                        <td>{{local}}</td>
                        <td>{{remote}}</td>
                        <td>{{ignore}}</td>
                        <td>{{#if start}} <button class='btn btn-danger btn-sm stopftpcron' data-id='{{id}}'>Stop</button>{{else}}<button class='btn btn-success btn-sm startftpcron' data-id='{{id}}'>Start</button> {{/if}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>